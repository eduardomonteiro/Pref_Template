@using Prefeitura_Template.Models;
@model Turismo

@{
    ViewBag.Title = "Detalhes do Ponto Turístico";
    ViewBag.AreaTitle = "Detalhes Ponto Turístico";
    ViewBag.AreaDescription = "";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="box box-warning">
        @if (!string.IsNullOrEmpty(ViewBag.Retorno))
        {
            if (ViewBag.Retorno.Contains("sucesso"))
            {
                <div class="alert alert-success alert-dismissable">
                    <i class="fa fa-check"></i>
                    <button class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    @ViewBag.Retorno
                </div>
            }

            else
            {
                <div class="alert alert-danger alert-dismissable">
                    <i class="fa fa-ban"></i>
                    <button class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    @ViewBag.Retorno
                </div>
            }
        }
        <div class="box-body">
            <table class="table table-bordered table-striped responsive">
                <tbody>
                    <tr>
                        <td style="width:200px">@Html.DisplayNameFor(model => model.Nome)</td>
                        <td>@Html.DisplayFor(model => model.Nome)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Descricao)</td>
                        <td>@Html.Raw(Model.Descricao)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.LinkMaps)</td>
                        <td>@Html.DisplayFor(model => model.LinkMaps)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Imagem)</td>
                        <td><img src="@Url.Content("~/Areas/Admin/Conteudo/Turismo/" + Model.Imagem)" width="423" title="@Model.Imagem" /></td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.Status)</td>
                        <td>@Html.DisplayFor(model => model.NomeStatus)</td>
                    </tr>

                </tbody>
            </table>

        </div>

        <div class="box-footer">
            <a href="@Url.Action("Index", "Turismo")" class="btn btn-info">< Voltar</a>
            <a href="@Url.Action("Edit", "Turismo", new { id = Model.Id })" class="btn btn-warning">Editar</a>
            
        </div>


    </div>
</div>


<div class="col-xs-12">
    @{Html.RenderAction("LogsHistory", "Logs", new { AreaId = ViewBag.codAreaAtual , id = Model.Id });}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


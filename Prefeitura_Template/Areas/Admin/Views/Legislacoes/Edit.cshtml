@model Prefeitura_Template.Models.Legislacao
@{
    ViewBag.Title = "Editar Ligislação";
    ViewBag.AreaTitle = "Editar Ligislação";
}

@using (Html.BeginForm("Edit", "Legislacoes", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="box box-warning">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.DataCadastro)
            @Html.HiddenFor(model => model.Status)
            @Html.HiddenFor(model => model.DataPublicacao)
            <div class="box-body">
                <div class="editor-label">
                    @Html.LabelFor(m => m.LegislacaoCategoriaId)
                </div>
                <div class="form-group">
                    @Html.DropDownListFor(m => m.LegislacaoCategoriaId, (IEnumerable<SelectListItem>)ViewBag.Categorias, new { @class = "form-control chosen-select" })
                    @Html.ValidationMessageFor(model => model.LegislacaoCategoriaId)
                </div>
                <div class="editor-label">
                    @Html.LabelFor(m => m.Titulo)
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Titulo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                </div>
                <div class="editor-label">
                    @Html.LabelFor(m => m.Descricao)
                </div>
                <div class="form-group">
                    @Html.TextAreaFor(m => m.Descricao, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="box-footer">
                <a href="@Url.Action("Details", "Legislacoes", new { id= Model.Id })" class="btn btn-warning">Cancelar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>

    </div>
}

@section scripts{
    <script>
        ApplyCkEditor('Descricao');
    </script>
}